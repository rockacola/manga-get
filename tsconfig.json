{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "lib": ["es6"]
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules"]
}
